# Dockerfile for building Linux version
FROM rust:1.90-slim

# Install dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Copy source code
COPY . .

# Build for Linux
RUN cargo build --release --target x86_64-unknown-linux-gnu

# The built binary will be in target/x86_64-unknown-linux-gnu/release/minecraft-installer
